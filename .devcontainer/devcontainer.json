{
    "name": "devcontainer",
    "dockerComposeFile": "../containers/compose.yaml",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
    "service": "devcontainer",
    "build": { "target": "development" },
    "containerEnv": {
        "PYTHONUNBUFFERED": "1"
    },
    "features": {},
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/dev/.ssh/id_rsa,type=bind,consistency=cached",
    ],
    //"postCreateCommand": "sudo apt-get install -y yadm && yadm clone --depth=1 https://github.com/iturdikulov/dev",
    "remoteUser": "dev",
    "runArgs": ["--hostname=devcontainer"]
}
